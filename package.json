{
  "name": "@ucdjs/release-scripts",
  "version": "0.1.0-beta.17",
  "description": "@ucdjs release scripts",
  "type": "module",
  "packageManager": "pnpm@10.19.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucdjs/release-scripts.git"
  },
  "imports": {
    "#core/*": "./src/core/*.ts",
    "#versioning/*": "./src/versioning/*.ts",
    "#shared/*": "./src/shared/*.ts",
    "#release": "./src/release.ts",
    "#publish": "./src/publish.ts",
    "#verify": "./src/verify.ts"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@luxass/utils": "2.7.2",
    "commit-parser": "1.3.0",
    "farver": "1.0.0-beta.1",
    "mri": "1.2.0",
    "prompts": "2.4.2",
    "semver": "7.7.3",
    "tinyexec": "1.0.2"
  },
  "devDependencies": {
    "@luxass/eslint-config": "6.0.1",
    "@types/node": "22.18.12",
    "@types/prompts": "2.4.9",
    "@types/semver": "7.7.1",
    "eslint": "9.39.1",
    "eta": "4.0.1",
    "tsdown": "0.16.0",
    "typescript": "5.9.3",
    "vitest": "4.0.4",
    "vitest-testdirs": "4.3.0"
  }
}
